{
  "manifest_version": 2,
  "name": "Mindguard",
  "version": "1.0",
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "dist/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}

