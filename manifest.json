{
  "manifest_version": 3,
  "name": "BlissBrowse",
  "version": "1.0",
  "permissions": ["tabs"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*",
        "*://*.news.ycombinator.com/*",
        "*://*.tiktok.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons":{
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/48.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "description": "Content filter for the browser. Filter web content by blocking keywords or subjects, ensuring that your online space is exactly as you wish it to be."
}


